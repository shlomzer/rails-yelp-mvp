<h2>My list of restaurants</h2>

<% @restaurants.each do |restaurant| %>
<h3><%= restaurant.name %></h3>
<p><%= restaurant.address %></p>
<p><%= restaurant.category %></p>
<%= link_to 'See details', restaurant_path(restaurant), class: "btn btn-primary"%>
<%= link_to 'Add review', new_restaurant_review_path(restaurant), class: "btn btn-primary"%>
<% end %>

<%= link_to 'Add a new restaurant', new_restaurant_path, class: "btn btn-success"%>
